{
  "name": "bottlerocket",
  "version": "1.0.0",
  "description": "BR Web Test",
  "main": "index.js",
  "scripts": {
    "dev": "npm run clean && npm run dev:styles | npm run dev:html | npm run dev:webpack | npm run dev:server | npm run dev:reloadBrowser",
    "dev:webpack": "webpack --watch --config ./webpack.config.js --mode development",
    "dev:styles": "node-sass src/styles/main.scss -o ./dist && node-sass src/styles/main.scss --watch src -o ./dist",
    "dev:html": "npm run copyHtml | watch 'npm run copyHtml' ./src/html --interval=1",
    "dev:server": "http-server ./dist -c-1",
    "dev:reloadBrowser": "livereload ./dist -w 1000",
    "prod": "npm run clean && npm run prod:webpack && npm run copyHtml | npm run prod:styles",
    "prod:webpack": "webpack --config ./webpack.config.js --mode production",
    "prod:styles": "node-sass src/styles/main.scss -o ./dist",
    "copyHtml": "cp ./src/html/*.html ./dist",
    "clean": "rm -rf ./dist && mkdir ./dist"
  },
  "author": "Matt Aurich",
  "license": "ISC",
  "dependencies": {
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "livereload": "^0.7.0",
    "node-sass": "^4.8.3",
    "reload": "^2.2.2",
    "sass-loader": "^7.0.1",
    "watch": "^1.0.2",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3"
  }
}
